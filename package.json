{
  "name": "reliable-server-agent",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Fault-tolerant single-agent command execution system",
  "scripts": {
    "build": "pnpm -r build",
    "start:server": "pnpm --filter @reliable-server-agent/server start",
    "start:agent": "pnpm --filter @reliable-server-agent/agent start",
    "dev:server": "pnpm --filter @reliable-server-agent/server dev",
    "dev:agent": "pnpm --filter @reliable-server-agent/agent dev",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "pnpm -r clean",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@stylistic/eslint-plugin": "^2.12.1",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@vitest/coverage-v8": "^2.1.0",
    "eslint": "^9.17.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.2",
    "vitest": "^2.1.0"
  }
}
